<!doctype html>
<html>
  <head>
    <!-- init -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Cansur</title>

    <!-- <link rel="stylesheet" href="tmp/style.css"> -->

    <!-- Bootstap link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  </head>
  <body class="bg-dark text-light">

    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="http://localhost:8080/">Cansur</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="http://localhost:8080/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:8080/Users">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:8080/board">Board</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:8080/login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <br>

    <form action="/board/view" method="post"></form>
        <button  type="button" class="btn btn-primary"
            style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"
            onclick="location.href='../'">
            뒤로가기
        </button>
    
        <button  type="button" class="btn" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; background-color: crimson;"
        onclick="location.href='/board/view/<%=data[0].seq%>/delete'"> 
            삭제하기
        </button>

        <button  type="button" class="btn" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; background-color: floralwhite;"
        onclick="location.href='/board/view/<%=data[0].seq%>/edit'"> 
            수정하기
        </button>
    </form>

    <!-- 글 내용 -->
    <div class="container-sm">
        <div><h3><%=data[0].title%></h3></div><br>
        <div>작성자 : <%=data[0].user_id%></div>
        <hr>
        <div><%-data[0].contents%></div>
        <br><br><br><br><br><br>

    </div>
    
    <!-- Bootstap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
  </body>
</html>